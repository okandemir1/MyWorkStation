@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-color-theme="dark">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Giriş Yap</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/_admin/css/phosphor_icons.css" rel="stylesheet" type="text/css">
    <link href="~/_admin/css/limitless.css" rel="stylesheet" type="text/css">
    <link href="~/_admin/css/custom.css" rel="stylesheet" type="text/css">
    <script src="~/_admin/js/jquery.min.js"></script>
</head>

<body class="operation-bg">
    <div class="page-content">
        <div class="content-wrapper">
            <div class="content-inner">
                <div class="content d-flex justify-content-center align-items-center">
                    <form class="login-form" asp-action="Login" asp-controller="Auth"
                      data-ajax="true" data-ajax-method="POST"
                      data-ajax-success="OnFormSuccess">
                        <div class="card mb-0">
                            <div class="card-body">
                                <div class="text-center mb-3">
                                    <div class="d-inline-flex align-items-center justify-content-center mb-4 mt-2">
                                        <img src="~/_admin/img/logo_icon.svg" class="h-48px" alt="">
                                    </div>
                                    <h5 class="mb-0">Giriş Yapınız</h5>
                                    <span class="d-block text-muted">Kullanıcı bilgileriniz ile giriş yapabilirsiniz</span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Kullanıcı Adı</label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input type="text" name="Username" class="form-control" placeholder="Kullanıcı Adı">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-user-circle text-muted"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Şifre</label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input type="password" name="Password" class="form-control" placeholder="•••••••••••">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-lock text-muted"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Güvenlik Key</label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input type="password" name="Key" class="form-control" placeholder="•••••••••••">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-lock text-muted"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                                </div>
                                <div class="mb-3">
                                    <a href="@Url.Action("Register","Auth")" class="btn btn-warning w-100">Üye Ol</a>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="btn-to-top"><button class="btn btn-secondary btn-icon rounded-pill" type="button"><i class="ph-arrow-up"></i></button></div>
        </div>
    </div>

    <script src="~/_admin/js/sweet_alert.min.js"></script>
    <script src="~/_admin/js/moment.min.js"></script>
    <script src="~/_admin/js/form_select2.js"></script>
    <script src="~/_admin/js/form_layouts.js"></script>
    <script src="~/_admin/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/_admin/js/layout.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function OnFormSuccess(result) {
            console.log(result);
            if (result.isSucceed) {
                location.href = result.redirect;
            }
            else {
                if (result.errors != null && result.errors.length > 0) {
                    layout.error_message_list(result.title, result.message, result.errors)
                }
                else {
                    layout.error_message(result.title, result.message);
                }
            }
        };
    </script>
</body>
</html>

    
