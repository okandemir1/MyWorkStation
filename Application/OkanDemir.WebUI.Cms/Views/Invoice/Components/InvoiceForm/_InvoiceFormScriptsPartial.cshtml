<script>
    $(document).ready(function(){
        $("select").select2();

        new Datepicker(document.querySelector('input[name="InvoiceDate"]'), {
            container: '.content-inner',
            buttonClass: 'btn',
            prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
            nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
            weekStart: 1,
            format: 'dd-mm-yyyy'
        });
        new Datepicker(document.querySelector('input[name="LastPaymentDate"]'), {
            container: '.content-inner',
            buttonClass: 'btn',
            prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
            nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
            weekStart: 1,
            format: 'dd-mm-yyyy'
        });
        new Datepicker(document.querySelector('input[name="InvoicePaymentDate"]'), {
            container: '.content-inner',
            buttonClass: 'btn',
            prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
            nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
            weekStart: 1,
            format: 'dd-mm-yyyy'
        });
    });

    function OnFormSuccess(result) {
        if (result.isSucceed) {
            layout.success_action_message("Başarılı", result.message, "/Invoice/");
        }
        else {
            if (result.errors != null && result.errors.length > 0) {
                layout.error_message_list("Hay Aksi", result.message, result.errors)
            }
            else {
                layout.error_message("Hay Aksi", result.message);
            }
        }
    };
    
</script>