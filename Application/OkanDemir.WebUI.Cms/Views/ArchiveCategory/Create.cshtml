@model ArchiveCategoryDto

@{
    var title = "Arşiv Kategorisi Ekle";
    ViewData["Title"] = title;
}

@Html.Raw(bread.BreadCrumb(
    new List<Bc>() {
        new Bc("Dashboard", Url.Action("Index","Home")),
        new Bc("Liste", Url.Action("Index","ArchiveCategory")),
        new Bc(title , "")
    }
))

@Html.Raw(pageHeader.MainHeader(
    title,
    "",
    "Listeye Dön",
    Url.Action("Index","ArchiveCategory")
))

<div class="content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@title</h5>
                </div>
                <div class="card-body">
                    @await Component.InvokeAsync("ArchiveCategoryForm", new { action = "Create", Model = new ArchiveCategoryDto() })
                </div>
            </div>
        </div>
    </div>
</div>
 
@section Styles
{
  @await Html.PartialAsync("Components/ArchiveCategoryForm/_ArchiveCategoryFormStylesPartial") 
}

@section Scripts
{
  @await Html.PartialAsync("Components/ArchiveCategoryForm/_ArchiveCategoryFormScriptsPartial")
}