    </div>

    <script src="~/_admin/js/sweet_alert.min.js"></script>
    <script src="~/_admin/js/jquery.min.js"></script>
    <script src="~/_admin/js/bootstrap.bundle.min.js"></script>
    <script src="~/_admin/js/blockui.min.js"></script>
    <script src="~/_admin/js/d3.min.js"></script>
    <script src="~/_admin/js/d3_tooltip.js"></script>
    <script src="~/_admin/js/switchery.min.js"></script>
    <script src="~/_admin/js/bootstrap_multiselect.js"></script>
