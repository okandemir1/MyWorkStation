    <script src="~/_admin/js/select2.min.js"></script>
    <script src="~/_admin/js/anytime.min.js"></script>
    <script src="~/_admin/js/validator.min.js"></script>
    <script src="~/_admin/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/_admin/js/jquery.dataTables.min.js"></script>
    <script src="~/_admin/js/layout.js"></script>
    <script src="~/_admin/js/app.js"></script>

    <script type="text/javascript">
        const layoutJsHelper = (function () {
            const swalInit = swal.mixin({
                buttonsStyling: false,
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger',
                    denyButton: 'btn btn-danger',
                    input: 'form-control'
                }
            });

            function passive(url, id) {
                swalInit.fire({
                    title: 'Emin misiniz?',
                    text: "Seçtiğiniz veri sistemde pasif olarak işaretlenecektir.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, Pasif Et',
                    cancelButtonText: 'İptal',
                    buttonsStyling: false,
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger'
                    }
                }).then(function (result) {
                    if (result.value) {
                        $.get("/" + url + "/Passive/" + id, function (e) {
                            if (e.isSucceed) {
                                swalInit.fire({
                                    title: "Başarılı",
                                    text: e.message,
                                    icon: "success"
                                }).then((willClick) => {
                                    location.reload();
                                });
                            }
                            else {
                                swalInit.fire({
                                    title: "Hay Aksi",
                                    text: e.message,
                                    icon: "warning"
                                });
                            }
                        });
                    }
                });
            }
            function active(url, id) {
                swalInit.fire({
                    title: 'Emin misiniz?',
                    text: "Seçtiğiniz veri sistemde aktif olarak işaretlenecektir.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, Aktif Et',
                    cancelButtonText: 'İptal',
                    buttonsStyling: false,
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger'
                    }
                }).then(function (result) {
                    if (result.value) {
                        $.get("/" + url + "/Active/" + id, function (e) {
                            if (e.isSucceed) {
                                swalInit.fire({
                                    title: "Başarılı",
                                    text: e.message,
                                    icon: "success"
                                }).then((willClick) => {
                                    location.reload();
                                });
                            }
                            else {
                                swalInit.fire({
                                    title: "Hay Aksi",
                                    text: e.message,
                                    icon: "warning"
                                });
                            }
                        });
                    }
                });
            }
            function deleteItem(url, id) {
                swalInit.fire({
                    title: 'Emin misiniz?',
                    text: "Seçtiğiniz veri sistemden silinecektir.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, Sil',
                    cancelButtonText: 'İptal',
                    buttonsStyling: false,
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger'
                    }
                }).then(function (result) {
                    if (result.value) {
                        $.get("/" + url + "/Delete/" + id, function (e) {
                            if (e.isSucceed) {
                                swalInit.fire({
                                    title: "Başarılı",
                                    text: e.message,
                                    icon: "success"
                                }).then((willClick) => {
                                    location.reload();
                                });
                            }
                            else {
                                swalInit.fire({
                                    title: "Hay Aksi",
                                    text: e.message,
                                    icon: "warning"
                                });
                            }
                        });
                    }
                });
            }
            return {
                passive: passive,
                active: active,
                deleteItem: deleteItem,
            };
        }());

        document.documentElement.setAttribute('data-color-theme', 'dark');
    </script>

    @RenderSection("scripts", false)
</body>
</html>